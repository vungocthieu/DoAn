<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".fragments.StoriesByCategoryFragment">

    <TextView
        android:id="@+id/text_view_category_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Truyện thể loại: [Tên Thể Loại]"
        android:textColor="@color/text_primary_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center_horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_stories_by_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_view_category_header"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/list_item_story_grid" />

    <TextView
        android:id="@+id/text_view_no_stories_in_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có truyện nào thuộc thể loại này."
        android:textColor="@color/text_secondary_color"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>